<h1>Login</h1>

<form action="/lists/{{id}}/login" method="post">
	<fieldset>
		<input type="hidden" name="_csrf" value="{{token}}" />

		<p>
			<label for="password">Password</label>
			<input id="password" name="password" type="password" />
		</p>

		<button type="submit">Log In</button>
	</fieldset>
</form>